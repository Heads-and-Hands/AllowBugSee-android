<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="allowbugsee.handh.ru.allowbugsee">

    <permission
        android:name="allowbugsee.handh.ru.allowbugsee.ABSContentProvider.permRead"
        android:description="@string/app_name"
        android:label="permission_label"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="allowbugsee.handh.ru.allowbugsee"
            android:name="allowbugsee.handh.ru.allowbugsee.ABSContentProvider"
            android:multiprocess="true"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="allowbugsee.handh.ru.allowbugsee.ABSContentProvider.permRead"
            >
        </provider>

    </application>

</manifest>